# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=*

# Database (SQLite default, can switch to PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: postgresql://user:password@db:5432/swimdb

# Frontend Port
FRONTEND_PORT=80

# LDAP Authentication (Optional)
# See .env.ldap.example for complete LDAP configuration options
# To enable LDAP: copy .env.ldap.example to .env.ldap and configure

# File Server Settings (for IOS images)
DEFAULT_FILE_SERVER=tftp://10.1.1.100
FILE_SERVER_BASE_PATH=/images

# Network Device Credentials (Global defaults)
GLOBAL_DEVICE_USERNAME=admin
GLOBAL_DEVICE_PASSWORD=cisco
GLOBAL_DEVICE_SECRET=cisco

# Email Settings (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO

# Celery/Redis (for async tasks - optional)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
